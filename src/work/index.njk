---
layout: siteframe.njk
title: Work
description: React developer, digital artist, and accessibility advocate.
---

{% from 'macros/breadcrumbs.macro.njk' import breadcrumbs %} {% from
'macros/work-item.macro.njk' import work_item %}

{{
  breadcrumbs([
    { url: "/", title: "Home" },
    { url: "/work", title: "Work" }
  ])
}}

<main id="main" class="contained-width">
  <h1>Work</h1>
  {% for item in collections.workItems | reverse %}

  <section class="work-item" aria-labelledby="{{ item.data.headerId }}">
    <header class="work-item__headers">
      <div class="work-item__headers__showcase {{ item.data.colorClass }}">
        <img
          class="work-item__headers__showcase__img"
          src="{{ item.data.src }}"
          width="500"
          height="400"
          alt="{{ item.data.alt }}"
        />
      </div>
      <div class="work-item__headers__text">
        <h2
          id="{{ item.data.headerId }}"
          class="work-item__headers__text__heading"
        >
          {{ item.data.name }}
        </h2>
        <p class="work-item__headers__text__desc">
          {{ item.data.desc }}
        </p>
      </div>
      <a href="{{ item.url }}">{{ item.data.title }}</a>
    </header>
  </section>
  {% endfor %}
</main>
